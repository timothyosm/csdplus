{
  "name": "CSD+",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Fixin' Things",
  "icons": { "16": "tt-01.png"},
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Inject!",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "css" : ["style.css"]
    }
]

}